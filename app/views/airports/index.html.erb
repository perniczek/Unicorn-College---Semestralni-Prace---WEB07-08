<h2>Listing airports</h2>

<table id="show_table">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>Inbound fee</th>
    <th>Outbound fee</th>
    <th>Details</th>
    <th>Map</th>
    <th/><th/><th/>
  </tr>

<% for airport in @airports %>
  <tr>
    <td><strong><%=h airport.code %></strong></td>
    <td><%=h airport.name %></td>
    <td><%=h airport.inbound_fee %></td>
    <td><%=h airport.outbound_fee %></td>
    <td title="<%= airport.details %>"><%=h truncate(airport.details,30) %></td>
    <td><%= link_to(image_tag("map.gif", :border=>0), "http://www.mapy.cz/#z=10@mm=ZP@sa=s@st=s@ssq=#{airport.gps_position}@sss=1", :popup => true) if !airport.gps_position.empty? %></td>
    <td><%= link_to image_tag("detail.gif", :border=>0), airport %></td>
    <td><%= link_to image_tag("edit.gif", :border=>0), edit_airport_path(airport) %></td>
    <td><%= link_to image_tag("delete.gif", :border=>0), airport, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

