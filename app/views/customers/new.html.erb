<h1>New customer</h1>

<%= error_messages_for :customer %>

<% form_for(@customer) do |f| %>
  <p>
    <b>First name</b><br />
    <%= f.text_field :first_name %>
  </p>

  <p>
    <b>Surname</b><br />
    <%= f.text_field :surname %>
  </p>
  <p>
    <b>Birth number</b><br />
    <%= f.text_field :birth_number %>
  </p>

  <p>
    <b>Address</b><br />
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', customers_path %>
