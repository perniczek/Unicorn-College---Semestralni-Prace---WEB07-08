<h2>Listing customers</h2>

<table id="show_table">
  <tr>
  <th>Birth number</th>
    <th>First name</th>
    <th>Surname</th>
    <th>Address</th>
    <th/><th/><th/>
  </tr>

<% for customer in @customers %>
  <tr>
    <td><%=h customer.birth_number %></td>
    <td><%=h customer.first_name %></td>
    <td><%=h customer.surname %></td>
    <td><%=h customer.address %></td>
    <td><%= link_to image_tag("detail.gif", :border=>0), customer %></td>
    <td><%= link_to image_tag("edit.gif", :border=>0), edit_customer_path(customer) %></td>
    <td><%= link_to image_tag("delete.gif", :border=>0), customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

