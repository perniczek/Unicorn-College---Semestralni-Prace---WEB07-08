<h2>Listing flights</h2>

<table id="show_table">
  <tr>
    <th>Code</th>
    <th>Airport from</th>
    <th>Airport to</th>
    <th>Free seats</th>
    <th>Price with fees</th>
    <th>Operated by</th>
    <th>Leaves at</th>
    <th/><th/><th/>
  </tr>
  
  <% for flight in @flights %>
    <tr>
      <td><%=h flight.code %></td>
      <td><%=h flight.airport_from.name %></td>
      <td><%=h flight.airport_to.name %></td>
      <td><%=h flight.free_seats %></td>
      <%price_with_fees = flight.price.to_i + flight.airport_from.outbound_fee.to_i + flight.airport_to.inbound_fee.to_i %>
      <td><%=h price_with_fees %></td>
      <td><%=h flight.airplane.plane_type %></td>
      <td><%=h flight.leaves_at.strftime("%m/%d/%Y at %I:%M%p") %></td>
      <td><%= link_to image_tag("detail.gif", :border=>0), flight %></td>
      <td><%= link_to image_tag("edit.gif", :border=>0), edit_flight_path(flight) %></td>
      <td><%= link_to image_tag("delete.gif", :border=>0), flight, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

