<h1>Thank you for purchasing tickets you may check in now</h1>

<%pass.each do |iter|%>
  <h1>Airticket for <%=h iter[0].customer.first_name + " " + iter[0].customer.surname%></h1>
  <table id="show_table">
    <tr>
      <th>Rezervation nr.</th>
      <th>Firstname</th>
      <th>Surname</th>
      <th>Flights Id</th>
      <th>From airport</th>
      <th>Leaves at</th>
    </tr>
    <tr>
      <td><%=h iter[0].reservation_code%></td>
      <td><%=h iter[0].customer.first_name%> </td>
      <td><%=h iter[0].customer.surname%></td>
      <td><%=h iter[1].flight_id %></td>
      <td><%=h iter[1].flight.airport_from.code %> </td>
      <td><%=h iter[1].flight.leaves_at.strftime("%m/%d/%Y at %I:%M%p")%></td>
    </tr>
  </table>
<%end%>