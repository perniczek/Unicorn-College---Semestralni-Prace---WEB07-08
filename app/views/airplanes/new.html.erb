<h1>New airplane</h1>

<% content_for :validation_errors do %>
  <%= error_messages_for :airplane %>
<% end %>

<% form_for(@airplane) do |f| %>
  <p>
    <b>Plane type</b><br />
    <%= f.text_field :plane_type %>
  </p>

  <p>
    <b>Code</b><br />
    <%= f.text_field :code %>
  </p>

  <p>
    <b>Seats</b><br />
    <%= f.text_field :seats %>
  </p>

  <p>
    <b>Made when</b><br />
    <%= f.date_select :made_when %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', airplanes_path %>
